
.overflow {
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
width: 100%;
}
.content {
display: flex;
width: 100%;
position: absolute;
bottom: 0rpx;
left: 0;
top: 0;
overflow: hidden;
z-index: 10;
}
.menu-container {
width: 160rpx;
flex: 0 0 160rpx;
background: #f6f6f6;
}
.detail-container {
 flex: 1; 
height: 100%;
}

.scroll-view {
width: 100%;
height: 100%;
}
.scroll-view-ul {
width: 100%;
height: 100%;
}
.scroll-view-item,.ss {
height: 110rpx;
width: 100%;
font-size: 24rpx;
color: #666;
border-left: 8rpx solid transparent;
display: flex;
align-items: center;
justify-content: center;
position: relative;
}
.scroll-view-item:after {
content: '';
left: 0;
right: 0;
bottom: 0;
height: 1px;
background-color: #dfdfdf;
transform: scaleY(0.5);
position: absolute;
}
.active {
background: #ffffff;
color: #ff3700;
border-left: 8rpx solid #ff3700;
}
.market-scroll-list {
  height: 100%;
  width:100%;
  display: flex;
  margin: 20rpx 0px; 
}
.title {
  color: #ff3700;
  height: 60rpx;
  background-color: #f6f6f6;
  border-left: 6rpx solid #dfdfdf;
  padding-left: 25rpx;
  line-height: 60rpx;
}
.inner {
  display: inline-block;
  position: relative;
  margin:20rpx 6rpx;
   text-align: center;
}
.inner image{
  width:170rpx;
  height:170rpx;
}
.inner text{
  white-space: pre-line;
  text-align: center;
  border:1px solid;
}
.inner:after {
  content: '';
  left: 30rpx;
  right: 0;
  bottom: 0;
  height: 1px;
  background-color: #dfdfdf;
  transform: scaleY(0.5);
  position: absolute;
}
.info {
  flex: 1;
  padding: 0 30rpx;
  font-size: 0;
}
  .info-title {
    color: #333;
    font-size: 26rpx;
  }
  .info-subtitle {
    color: #999999;
    font-size: 20rpx;
    margin-top: -3rpx;
  }
  .info-desc {
    color: #666666;
    font-size: 22rpx;
    margin-top: 5rpx;
  }
.num {
  width: 120rpx;
  position: relative;
}
.text {
  position: absolute;
  bottom: 0;
  font-size: 22rpx;
  color: #666;
}