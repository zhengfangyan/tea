/* pages/goods/goods.wxss */
.img_item{
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 4rpx;
}
.img_item image{
  width:350rpx;
  height:350rpx;
}
.item{
  margin: 10rpx 5rpx;
  width:48%;
}
.product-name{
  margin: 20rpx 40rpx  10rpx 40rpx;
  overflow : hidden; 
  text-overflow: ellipsis; 
  display: -webkit-box;    
  -webkit-line-clamp: 2;   
  -webkit-box-orient: vertical;    
  word-break: break-all;
}
.product-price-wrap{
  color:#c00;
  padding:20rpx 40rpx; 
}
